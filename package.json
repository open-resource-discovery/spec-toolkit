{
  "$schema": "http://json.schemastore.org/package",
  "name": "@open-resource-discovery/spec-toolkit",
  "version": "0.5.0",
  "description": "JSON Schema Toolkit CLI to create schema based interface documentation",
  "author": "SAP SE",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "./dist/cli.js",
  "files": [
    "README.md",
    "dist/"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p ./tsconfig.build.json",
    "postbuild": "npm run postbuild-spec-toolkit-config && npm run postbuild-spec",
    "postbuild-spec-toolkit-config": "node ./dist/cli.js -c ./spec-toolkit-config.config.json && cp -r ./src/generated/spec-toolkit-config/spec-v1/docs/spec-toolkit-config.md -t 'website/docs/docs/' && cp -r ./src/generated/spec-toolkit-config/spec-v1/schemas/* -t 'website/static/spec-v1/'",
    "postbuild-spec": "node ./dist/cli.js -c ./spec.config.json && cp -r ./src/generated/spec/spec-v1/docs/spec.md -t 'website/docs/docs/' && cp -r ./src/generated/spec/spec-v1/schemas/* -t 'website/static/spec-v1/'",
    "lint:staged": "lint-staged",
    "eslint": "eslint . --fix",
    "eslint:ci": "eslint .",
    "prettier": "prettier --write \"**/*.{js,ts,json,yml,yaml,md}\"",
    "prettier:ci": "prettier --check \"**/*.{js,ts,json,yml,yaml,md}\"",
    "test": "npm run build && node --experimental-vm-modules --no-warnings=ExperimentalWarning node_modules/jest/bin/jest.js --ci --collectCoverage",
    "test:watch": "node --experimental-vm-modules --no-warnings=ExperimentalWarning node_modules/jest/bin/jest.js --watchAll",
    "prepare": "is-ci || husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-resource-discovery/spec-toolkit.git"
  },
  "homepage": "https://open-resource-discovery.github.io/spec-toolkit/",
  "dependencies": {
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "commander": "14.0.2",
    "comment-json": "4.5.1",
    "exceljs": "4.4.0",
    "fast-glob": "3.3.3",
    "fs-extra": "11.3.2",
    "gfm-escape": "0.2.0",
    "js-yaml": "4.1.1",
    "json-schema-to-typescript": "15.0.4",
    "lodash": "4.17.21",
    "quicktype-core": "23.2.6",
    "tslog": "4.9.3"
  },
  "devDependencies": {
    "@expo/spawn-async": "1.7.2",
    "@sap/eslint-config": "0.4.0",
    "@tsconfig/node22": "22.0.5",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "30.0.0",
    "@types/js-yaml": "4.0.9",
    "@types/lodash": "4.17.21",
    "@types/node": "24.10.2",
    "eslint": "9.39.1",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "jest": "30.2.0",
    "jest-watch-typeahead": "3.0.1",
    "json-schema": "0.4.0",
    "json-schema-library": "10.5.1",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "rimraf": "6.1.2",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "**/*.{js,ts,json,yml,yaml,md}}": [
      "prettier --write"
    ]
  }
}
